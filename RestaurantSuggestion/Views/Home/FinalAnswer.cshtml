@model AnswerViewModel
@{
    ViewData["Title"] = "FinalAnswer";
}

<h2>Aplicatia ti-a sugerat urmatorul restaurant pe baza raspunsurilor date:</h2>
<div>
    <div class="card text-center" style="width: 18rem; style=" background-color: rgb(211, 84, 0)"" id="@Model.AnswerId">
        @if (!@Model.AnswerText.Equals("Niciun rezultat"))
        {
            <img class="card-img-top" src="~/images/restaurant.png" style=" width: 150px; height: 150px;" alt="Card image cap">
            <div class="card-body" style="background-color: rgb(127, 140, 141); color: rgb(236, 240, 241); height:60px">
                <h3 class="card-text">@Model.AnswerText</h3>
            </div>
        }
        else
        {
            <img class="card-img-top" src="~/images/noResult.png"  alt="Card image cap">
        }
    </div>
</div>

