@model QuestionViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="row" style="margin-top: 10px">
    <div class="alert alert-info" role="alert" id="@Model.QuestionId">
        <h2>@Model.QuestionText</h2>
    </div>
    <div class="container">
        <div class="row justify-content-md-center">
            @foreach (var item in Model.QuestionAnswers)
            {
                <div class="col-6">
                    <button type="button" class="btn btn-primary btn-block btn-lg" id="@item.AnswerId">@item.AnswerText</button>
                </div>
            }
        </div>
    </div>
