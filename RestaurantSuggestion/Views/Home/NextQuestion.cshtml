@model BigViewModel
@{
    ViewData["Title"] = "NextQuestion";
}

<div class="row" style="margin-top: 10px">
    <div class="alert alert-info" role="alert" id="@Model.QuestionViewModel.QuestionId">
        <h2>@Model.QuestionViewModel.QuestionText</h2>
    </div>
    <div class="container">
        <div class="row justify-content-md-center">
            @foreach (var item in Model.QuestionViewModel.QuestionAnswers)
            {
                <div class="col-6">
                    <a asp-action="NextQuestion" asp-route-AnswerId="@item.AnswerId" id="@item.AnswerId"
                       class="btn btn-primary btn-lg btn-block">@item.AnswerText</a>
                </div>
            }
        </div>
    </div>
</div>

